	<xsl:template match="UiKit">
		<xsl:call-template name="getAutogeneratedComment">
			<xsl:with-param name="source" select="@Source"/>
			<xsl:with-param name="comment" select="$comment"/>
		</xsl:call-template>

		<xsl:call-template name="assertResourceDictionaries">
			<xsl:with-param name="externalResourceDictionaries" select="$externalResourceDictionaries"/>
			<xsl:with-param name="delimiter" select="$externalResourceDictionariesDelimiter"/>
		</xsl:call-template>

		<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
							xmlns:uikit="http://schemas.kaspirin.com/common/uikit"
							xmlns:visuals="http://schemas.kaspirin.com/common/visuals"
							xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

			<!--Merge product resource dictionary with base styles containing control templates-->
			<ResourceDictionary.MergedDictionaries>
				<xsl:call-template name="generateResourceDictionaries">
					<xsl:with-param name="externalResourceDictionaries" select="$externalResourceDictionaries" />
					<xsl:with-param name="delimiter" select="$externalResourceDictionariesDelimiter" />
				</xsl:call-template>
			</ResourceDictionary.MergedDictionaries>

			<xsl:apply-templates select="Controls" />
		</ResourceDictionary>
	</xsl:template>

	<xsl:template name="assertResourceDictionaries">
		<xsl:param name="externalResourceDictionaries" />
		<xsl:param name="delimiter" />

		<xsl:if test="normalize-space($externalResourceDictionaries) = ''">
			<xsl:message terminate="yes">External resource dictionaries are not set.</xsl:message>
		</xsl:if>

		<xsl:if test="normalize-space($delimiter) = ''">
			<xsl:message terminate="yes">External resource dictionaries delimiter is not set.</xsl:message>
		</xsl:if>
	</xsl:template>

	<xsl:template name="generateResourceDictionaries">
		<xsl:param name="externalResourceDictionaries" />
		<xsl:param name="delimiter" />

		<xsl:variable name="resourceDictionaries">
			<xsl:call-template name="split">
				<xsl:with-param name="value" select="$externalResourceDictionaries"/>
				<xsl:with-param name="delimiter" select="$delimiter"/>
			</xsl:call-template>
		</xsl:variable>

		<!--
		We can't simply use msxsl:node-set($resourceDictionaries)/value since it
		doesn't work due to the "custom" default namespace of this transformation.
		-->
		<xsl:for-each select="msxsl:node-set($resourceDictionaries)/*[name() = 'value']">
			<xsl:variable name="resourceDictionary" select="."/>

			<ResourceDictionary>
				<xsl:attribute name="Source">
					<xsl:value-of select="normalize-space($resourceDictionary)"/>
				</xsl:attribute>
			</ResourceDictionary>
		</xsl:for-each>
	</xsl:template>

	<!--Template for removing redundant line breaks-->
	<xsl:template match="*/text()[not(normalize-space())]" />

</xsl:transform>