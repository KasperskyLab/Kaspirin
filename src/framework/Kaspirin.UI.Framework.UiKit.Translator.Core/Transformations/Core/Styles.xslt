<xsl:transform xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
               xmlns:msxsl="urn:schemas-microsoft-com:xslt"
               xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
               xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
               exclude-result-prefixes="msxsl"
               version="1.0">

	<xsl:output method="xml" indent="yes" encoding="UTF-8" omit-xml-declaration="yes"/>

	<xsl:param name="excludedControlsFilter"/>
	<xsl:param name="excludedControlsFilterDelimiter"/>
	<xsl:param name="externalResourceDictionaries"/>
	<xsl:param name="externalResourceDictionariesDelimiter"/>
	<xsl:param name="conditionalNamespacePrefix"/>
	<xsl:param name="commentText"/>

	<xsl:variable name="excludedControls" select="$excludedControlsFilter"/>
	<xsl:variable name="excludedControlsDelimiter" select="$excludedControlsFilterDelimiter"/>
	<xsl:variable name="comment" select="$commentText"/>

	<xsl:include href="BadgeStyle.xslt"/>
	<xsl:include href="BulletStyle.xslt"/>
	<xsl:include href="ButtonStyle.xslt"/>
	<xsl:include href="CarouselItemStyle.xslt"/>
	<xsl:include href="CheckBoxRadioButtonStyle.xslt"/>
	<xsl:include href="ChipsControlStyle.xslt"/>
	<xsl:include href="ChipsItemStyle.xslt"/>
	<xsl:include href="CodeInputStyle.xslt"/>
	<xsl:include href="ContentButtonStyle.xslt"/>
	<xsl:include href="ContextMenuStyle.xslt"/>
	<xsl:include href="DateTimeInputStyle.xslt"/>
	<xsl:include href="DateTimePopupFooterButtonStyle.xslt"/>
	<xsl:include href="DateTimePopupItemButtonStyle.xslt"/>
	<xsl:include href="DateTimePopupPresenterStyle.xslt"/>
	<xsl:include href="DividerStyle.xslt"/>
	<xsl:include href="HyperlinkStyle.xslt"/>
	<xsl:include href="IconButtonStyle.xslt"/>
	<xsl:include href="IconStyle.xslt"/>
	<xsl:include href="ImageGalleryButtonStyle.xslt"/>
	<xsl:include href="ImageGalleryStyle.xslt"/>
	<xsl:include href="ImageGalleryListButtonStyle.xslt"/>
	<xsl:include href="ImageGalleryListStyle.xslt"/>
	<xsl:include href="InteractivityDialogStyle.xslt"/>
	<xsl:include href="InteractivityNotificationStyle.xslt"/>
	<xsl:include href="InteractivityOverlayStyle.xslt"/>
	<xsl:include href="IslandButtonStyle.xslt"/>
	<xsl:include href="IslandStyle.xslt"/>
	<xsl:include href="IslandToggleButtonStyle.xslt"/>
	<xsl:include href="ListMenuItemStyle.xslt"/>
	<xsl:include href="MenuItemStyle.xslt"/>
	<xsl:include href="NavigationMenuButtonStyle.xslt"/>
	<xsl:include href="NavigationMenuFooterButtonStyle.xslt"/>
	<xsl:include href="NotificationHintStyle.xslt"/>
	<xsl:include href="NotificationPanelStyle.xslt"/>
	<xsl:include href="NotificationSpinnerStyle.xslt"/>
	<xsl:include href="NumberInputStyle.xslt"/>
	<xsl:include href="PasswordInputStyle.xslt"/>
	<xsl:include href="PopupStyle.xslt"/>
	<xsl:include href="ProgressBarStyle.xslt"/>
	<xsl:include href="RoundProgressStyle.xslt"/>
	<xsl:include href="RoundTimerStyle.xslt"/>
